{
    "name": "vegacms/cms",
    "description": "Laravel CMS",
    "keywords": [
        "framework",
        "laravel",
        "laravel7",
        "CMS"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Stoyan Todorov",
            "email": "stoyan_11@abv.bg",
            "role": "Original idea, Developer"
        },
        {
            "name": "Nedyalko Raykov",
            "email": "ned.raykov@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "ext-json": "*",
        "fideloper/proxy": "^4.0",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^2.0",
        "spatie/laravel-translatable": "^4.1"
    },
    "require-dev": {
        "laravel/framework": "^7.0",
        "roave/security-advisories": "dev-master",
        "ext-json": "*",
        "barryvdh/laravel-debugbar": "^3.2",
        "beyondcode/laravel-dump-server": "^1.0",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^4.1",
        "phpunit/phpunit": "^8.5",
        "facade/ignition": "^2.0",
        "orchestra/testbench": "5.3.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vegacms\\Cms\\Providers\\PackageServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.10.1-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "files": [
            "src/Helpers/Helpers.php"
        ],
        "psr-4": {
            "Vegacms\\Cms\\": "src"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Vegacms\\Cms\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
